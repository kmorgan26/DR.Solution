@namespace DRApplication.Client.Controls

<MudItem xs="12" sm="12" md="6" lg="3">
    <MudCard Elevation="5">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Default" Size="Size.Medium">@DeviceVm.Device.ToString().Substring(2)</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudLink Typo="Typo.h6" Color="Color.Primary" Href="@($"/device/details/{@DeviceVm.Id}")">@DeviceVm.Device</MudLink>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            Current Load:
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
        </MudCardActions>
    </MudCard>
</MudItem>

@code {

    [Parameter]
    public DeviceVm DeviceVm { get; set; } = new();

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

}
