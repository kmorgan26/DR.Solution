@namespace DRApplication.Client.Controls
@inject IHardwareService HardwareService
@inject AppState AppState

<MudItem xs="12" sm="9" md="6" lg="3" Class="mb-4">
    <HardwareConfigSelect OnHardwareConfigIdChanged="SetHardwareConfigVm"></HardwareConfigSelect>
</MudItem>

<SoftwareSystemTable />

@code {

    async Task SetHardwareConfigVm(int id)
    {
        if (id > 0)
        {
            var hardwareConfigVm = await HardwareService.GetHardwareConfigVmById(id);
            AppState.UpdateHardwareConfigVm(this, hardwareConfigVm);
        }
    }
}