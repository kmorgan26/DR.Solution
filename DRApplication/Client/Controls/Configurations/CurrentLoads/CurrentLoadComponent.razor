@namespace DRApplication.Client.Controls
@inject IPlatformService PlatformService
@inject AppState AppState

<MudItem xs="12" sm="9" md="6" lg="3" Class="mb-4">
    <DeviceTypeSelect OnDeviceTypeIdChanged="SetDeviceTypeId"></DeviceTypeSelect>
</MudItem>

<CurrentLoadTable />

@code {

    async Task SetDeviceTypeId(int id)
    {
        if (id > 0)
        {
            var deviceTypeVm = await PlatformService.GetDeviceTypeVmByIdAsync(id);
            AppState.UpdateDeviceTypeVm(this, deviceTypeVm);
        }
    }
}