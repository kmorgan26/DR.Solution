@namespace DRApplication.Client.Controls
@inject IHardwareService HardwareService
@inject AppState AppState

<MudItem xs="12" sm="9" md="6" lg="3" Class="mb-4">
    <HardwareSystemSelect OnHardwareSystemIdChanged="SetHardwareSystemId"></HardwareSystemSelect>
</MudItem>

<HardwareVersionTable></HardwareVersionTable>

@code {

    async Task SetHardwareSystemId(int id)
    {
        if (id > 0)
        {
            var hardwareSystemVm = await HardwareService.GetHardwareSystemVmById(id);
            AppState.UpdateHardwareSystemVm(this, hardwareSystemVm);
        }
    }
}