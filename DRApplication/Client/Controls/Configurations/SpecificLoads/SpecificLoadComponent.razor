@namespace DRApplication.Client.Controls
@inject IPlatformService PlatformService
@inject AppState AppState

<MudItem xs="12" sm="9" md="6" lg="3" Class="mb-4">
    <DeviceSelect OnDeviceIdChanged="SetDeviceId" />
</MudItem>

<SpecificLoadTable />

@code {

    async Task SetDeviceId(int id)
    {
        if (id > 0)
        {
            var deviceVm = await PlatformService.GetDeviceVmById(id);
            AppState.UpdateDeviceVm(this, deviceVm);
        }
    }
}