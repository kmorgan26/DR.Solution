@namespace DRApplication.Client.Controls
@inject HardwareSystemManager manager
@inject NavigationManager navigation

@if (@_harwareSystemInsertVm != null)
{
    <MudItem xs="12" sm="12" md="4" lg="3">
        <EditForm Model="@_harwareSystemInsertVm" OnValidSubmit="@InsertHardwareSystem">

            <MudTextField @bind-Value="_harwareSystemInsertVm.Name" Class="my-6" Label="Hardware System" Variant="Variant.Outlined"></MudTextField>

            <SubmitButton ButtonText="Insert" />
            <CancelButton Url="/hardwaresystem" />

        </EditForm>
    </MudItem>
}