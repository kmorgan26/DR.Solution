@namespace DRApplication.Client.Controls
@inject IGenericListService GenericListService

@if (!_isBusy && _genericListVms is not null)
{
    <MudRadioGroup SelectedOptionChanged="OnSelectedOptionChanged" >
        @foreach (var item in _genericListVms)
        {
            <MudRadio Option="item.Id" Color="Color.Primary" Size="Size.Small" >@item.Name</MudRadio>
        }
    </MudRadioGroup>
}

@code {

    private bool _isBusy;

    private int SelectedOption { get; set; }
    
    [Parameter]
    public EventCallback<int> OnSelectedOptionChanged { get; set; }

    [Parameter]
    public PlatformListType ListType { get; set; }

    public IEnumerable<GenericListVm>? _genericListVms { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _isBusy = true;
        _genericListVms = await GenericListService.GetGenericListVmsAsync(ListType);
        _isBusy = false;
    }
}