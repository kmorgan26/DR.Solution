@page "/devices/list/{deviceTypeId:int}"
@namespace DRApplication.Client.Pages


<MudGrid Spacing="2" Justify="Justify.Center">
    @if (Devices is not null)
    {
        @foreach (var item in Devices)
        {
            <MudItem xs="12" sm="12" md="6" lg="3">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Color="Color.Info" Size="Size.Medium">@item.Device</MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudLink Typo="Typo.h6" Color="Color.Primary" Href="@($"/device/details/{@item.Id}")">@item.Device</MudLink>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Animation="Animation.Wave" Height="250px" />
                    <MudCardContent>
                        The Current Load will be displayed here.
                    </MudCardContent>
                    <MudCardActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
                        <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
                    </MudCardActions>
                </MudCard>
            </MudItem>

        }
    }
</MudGrid>
