@page "/devices/list/{deviceTypeId:int}"
@namespace DRApplication.Client.Pages


<MudGrid Spacing="2" Justify="Justify.Center">
    @if (Devices is not null)
    {
        @foreach (var item in Devices)
        {
            <MudItem xs="12" sm="12" md="6" lg="3">
                <MudCard>
                    <MudPaper Class="d-flex justify-center" Elevation="0">
                        <MudCardHeader>
                            <MudIcon Icon="@Icons.Filled.Link" Color="Color.Primary" Size="Size.Small"/>
                            <MudLink Href="@($"/device/details/{@item.Id}")">@item.Platform</MudLink>
                        </MudCardHeader>
                    </MudPaper>
                    <MudPaper Class="d-flex justify-center" Elevation="0">
                        <MudCardContent>
                            The Current Load will be displayed here.
                        </MudCardContent>
                    </MudPaper>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>
