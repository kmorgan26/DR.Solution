@page "/"
@namespace DRApplication.Client.Pages
@inject IPlatformService PlatformService

<MudGrid Spacing="2" Justify="Justify.Center">
    @if (!_isBusy && items is not null)
    {
        @foreach (var item in items)
        {
            <MudItem xs="12" sm="12" md="6" lg="3">
                <MudCard>
                    <MudPaper Class="d-flex justify-center" Elevation="0">
                        <MudCardHeader>
                            <MudIcon Icon="@Icons.Filled.Link" Color="Color.Primary" Size="Size.Small" Class="mr-1"/>
                            <MudLink Href="@($"/devices/list/{@item.Id}")">@item.Platform</MudLink>
                        </MudCardHeader>
                    </MudPaper>
                    <MudPaper Class="d-flex justify-center" Elevation="0">
                        <MudCardContent>

                        </MudCardContent>
                    </MudPaper>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>